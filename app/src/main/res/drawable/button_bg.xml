<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#FFD700" />
            <stroke
                android:width="3dp"
                android:color="#191919" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>
    <!-- 默认状态 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#191919" />
            <stroke
                android:width="3dp"
                android:color="#FFD700" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>
</selector>